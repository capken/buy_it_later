{
  "name": "Buy It Later",
  "description": "This extension adds the selected Amazon product into your evernote",
  "version": "1.0.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": { "128": "mail_128x128.png" },
  "options_page": "options.html",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
    "default_title": "Save this Product",
    "default_icon": "email_16x16.png"
  },

  "manifest_version": 2
}
